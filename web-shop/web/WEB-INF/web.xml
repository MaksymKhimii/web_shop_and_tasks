<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>SignUpPage</servlet-name>
    <jsp-file>/WEB-INF/user/signUp.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUpPage</servlet-name>
    <url-pattern>/signUpPage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginPage</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginPage</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ErrorPage</servlet-name>
    <jsp-file>/WEB-INF/common/errorPage.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ErrorPage</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>listener.AppContextListener</listener-class>
  </listener>
  <context-param>
    <param-name>captchaHandler</param-name>
    <param-value>hiddenFormField</param-value>
  </context-param>
</web-app>